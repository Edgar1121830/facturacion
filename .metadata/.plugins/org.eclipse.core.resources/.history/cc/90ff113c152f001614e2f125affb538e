			dtActu = new DataTable();
			dtActuE = new DataTable();
			dtActuZ = new DataTable();
			lienu.add(EstadosEnum.ACTIVO);
			lienu.add(EstadosEnum.INACTIVO);
			cargarDatos();
//			for(OpcionesMenuUsuario o: opc){
