//						&& (o.getPermisoCodigo().compareTo(PermisosMenu.SUMINISTROS.getIdPermiso().intValue())==0)){
//						
//					}
//				}
//			}
		}catch (Exception e) {
			e.printStackTrace();
		}
	}

	public void cargarDatos(){
		try{
			dtActu = new DataTable();
			dtActuE = new DataTable();
			dtActuZ = new DataTable();
		}catch(Exception e){
			e.printStackTrace();
		}
	}
	
	

}
